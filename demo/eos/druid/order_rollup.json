{
  "type": "kafka",
  "spec": {
    "ioConfig": {
      "type": "kafka",
      "consumerProperties": {
        "bootstrap.servers": "broker-1:9092,broker-2:9092,broker-3:9092",
        "isolation.level": "read_committed"
      },
      "topic": "ORDERS_ENRICHED",
      "inputFormat": {
        "type": "json"
      },
      "useEarliestOffset": true,
      "pollTimeout": 100,
      "period": "PT30S",
      "taskCount": 4
    },
    "tuningConfig": {
      "type": "kafka",
      "maxRowsInMemory": 10000,
      "maxRowsPerSegment": 50000,
      "maxTotalRows": 200000
    },
    "dataSchema": {
      "dataSource": "orders_rollup",
      "timestampSpec": {
        "column": "ORDER_TS",
        "format": "auto"
      },
      "dimensionsSpec": {
        "dimensions": [
          "USER_ID",
          "AREA_CODE",
          "STORE_ID",
          "POSTALCODE"
        ]
      },
      "metricsSpec": [
        {
          "type": "count",
          "name": "COUNT"
        },
        {
          "type": "longSum",
          "name": "QUANTITY",
          "fieldName": "QUANTITY"
        }
      ],
      "granularitySpec": {
        "type": "uniform",
        "segmentGranularity": "HOUR",
        "queryGranularity": "minute",
        "rollup": true,
        "intervals": null
      },
      "transformSpec": {
        "transforms": []
      }
    }
  }
}
